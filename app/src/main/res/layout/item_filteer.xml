<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/constraint"
    android:layout_marginStart="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#20000000"
    >

    <!-- TODO: rename properly -->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFilter"
        android:layout_width="@dimen/_63sdp"
        android:layout_height="@dimen/_63sdp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CornerSize10Percent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvNameFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        tools:text="Old"
        app:layout_constraintStart_toStartOf="@id/ivFilter"
        app:layout_constraintEnd_toEndOf="@id/ivFilter"
        app:layout_constraintTop_toBottomOf="@id/ivFilter"/>


</androidx.constraintlayout.widget.ConstraintLayout>